{
  "name": "Secondary-Counter-Screen",
  "version": "1.0.0",
  "description": "Papaz Pizza Admin App",
  "author": "Baig Group Limited",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "start": "electron ."
  },
  "keywords": [],
  "license": "ISC",
  "build": {
    "appId": "com.baiggroup.counterscreen",
    "productName": "Secondary-Counter-Screen",
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.js",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "public/"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "./assets/icons/app-icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Counter Screen",
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true, 
      "createStartMenuShortcut": true, 
      "allowElevation": true,
      "include": "build/installer.nsh"
    },
     "extraFiles": [
    {
      "from": "build/installer.nsh",
      "to": ".",
      "filter": ["**/*"]
    }
  ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "cookies-next": "^5.0.2",
    "electron-squirrel-startup": "^1.0.1",
    "flowbite-react": "^0.10.2",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-lazy-load-image-component": "^1.6.2",
    "react-router-dom": "^6.28.0",
    "react-simple-keyboard": "^3.8.71",
    "react-toastify": "^10.0.6",
    "react-use-cart": "^1.14.0",
    "vite": "^5.4.11",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8"
  }
}
